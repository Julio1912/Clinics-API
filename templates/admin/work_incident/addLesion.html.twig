{% extends 'admin/base.html.twig' %}

{% block title %}Hello PositionController!
{% endblock %}

{% block body %}
	<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{path('incident.lesion.list')}}">listes lésions</a></li>
					{% if editMode %}
                    	<li class="breadcrumb-item active">Modifier lésion</li>
					{% else %}
						<li class="breadcrumb-item active">Ajouter lésion</li>
					{% endif %}
                </ol>
            </div>
            <div class="col-sm-6">
                <span class="breadcrumb float-sm-right">
                    <a href="{{path('incident.lesion.list')}}" class="float-right btn btn-primary">Retour</a>
                </span>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
	<!-- Horizontal Form -->
	<div class="card card-info">
		<div class="card-header">
			{% if editMode %}
				<h3 class="card-title">Modifier lésion</h3>
			{% else %}
				<h3 class="card-title">Ajouter nouveaux lésion</h3>
			{% endif %}
			
		</div>
		<!-- /.card-header -->
		<!-- form start -->
		<div class="card-body">
			{% include "admin/work_incident/components/_formAddLesion.html.twig" %}
		</div>
	</div>
	<!-- /.card -->
{% endblock %}
{% block javascripts %}
{% endblock %}
