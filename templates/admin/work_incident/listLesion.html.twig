{% extends 'admin/base.html.twig' %}

{% block title %}Hello PositionController!{% endblock %}

{% block body %}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
                    <li class="breadcrumb-item active">listes des natures de lésion</li>
                </ol>
            </div>
            <div class="col-sm-6">
                <span class="breadcrumb float-sm-right">
                    <a href="{{path('incident.lesion.add')}}" class="float-right btn btn-primary">Ajouter nouveau lésion</a>
                </span>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card ">
    <div class="card-header">
        <h3 class="card-title">
            <center>Listes des natures de lésion</center>
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="listIncidents" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for listsLesion in listsLesions %}
                <tr>
                    <td>{{listsLesion.name}}</td>
                    <td>{{listsLesion.description}}</td>
                     <td>{{ include('admin/components/block/status.html.twig', { 'etat_status': listsLesion.status}) }}</td>
                    <td>
                            <a href="{{path('incident.lesion.edit' , {"id":listsLesion.id})}}" class="btn btn-rounded btn-success" data-toggle="tooltip" data-placement="bottom">
									<i class="m-r-10 fas fa-edit"></i>
								</a>
                        </td>
                </tr>
            {% endfor %}
                
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
{% endblock %}
{% block javascripts %}
{{ include('admin/components/block/blockjs.datatable.html.twig', { 'table_id': 'listIncidents', 'targets': 6 }) }}
{# {{ include('admin/block/blockjs.datatable.html.twig', { 'table_id': 'listPositions', 'targets': 4 }) }} #}
{% endblock %}