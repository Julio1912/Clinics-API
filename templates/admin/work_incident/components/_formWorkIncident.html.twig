<div class="col-lg-12 col-md-12">
        <!-- Widget: user widget style 1 -->
        <div class="card card-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-info">
                <h3 class="widget-user-username">{{adherent.lastname}}</h3>
                <h5 class="widget-user-desc">{{adherent.firstname}}</h5>
            </div>
            <div class="widget-user-image">
                {% if adherent.avatar is null %}
                    <img class="profile-user-img img-fluid" src="{{asset('uploads/avatarAdherent/default.png')}}" alt="User profile picture">
                {% else %}
                    <img class="profile-user-img img-fluid" src="{{asset('uploads/avatarAdherent/' ~ adherent.avatar)}}" alt="User profile picture">
                    
                {% endif %}
                
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-4 border-right">
                        <div class="description-block">
                            <h5 class="description-header">Num√©ro Affiliation</h5>
                            <span class="description-text">{{adherent.affiliateNumber}}</span>
                        </div>
                    <!-- /.description-block -->
                    </div>
                  <!-- /.col -->
                    <div class="col-sm-4 border-right">
                        <div class="description-block">
                            <h5 class="description-header">Etablissement</h5>
                            <span class="description-text">{{adherent.establishment.name}}</span>
                        </div>
                    <!-- /.description-block -->
                    </div>
                  <!-- /.col -->
                    <div class="col-sm-4">
                        <div class="description-block">
                            <h5 class="description-header">Date de Naissance</h5>
                            <span class="description-text">{{adherent.birthday|date('d-F-Y')}}</span>
                        </div>
                        <!-- /.description-block -->
                    </div>
                  <!-- /.col -->
                </div>
                <hr>
                {# <div class="row"> #}
                    
                    {{form_start(formWorkIncident)}}

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_row(formWorkIncident.incidentPlace) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_row(formWorkIncident.source) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_row(formWorkIncident.reason) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_row(formWorkIncident.dayOffNumber) }}
                                </div>
                            </div>
                        </div>

                        <div class="row"> 
                            {% if editMode %}
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-success btn-block">Modifier</button>
                                </div>
                            {% else %}
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-info btn-block">Ajouter</button>
                                </div>
                            {% endif %}
                            
                            <div class="col-lg-6">
                                <button type="reset" class="btn btn-default btn-block">Reseter</button>
                            </div>
                        </div>

                    {{form_end(formWorkIncident)}}

                {# </div> #}
                <!-- /.row -->
            </div>
        </div>
            <!-- /.widget-user -->
    </div>




