{{ form_start(formDrug) }}

<div class="row">
    <div class="col-lg-4">
        <div class="form-group">
            {{ form_row(formDrug.name) }}
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="form-group">
            {{ form_row(formDrug.type) }}
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            {{ form_row(formDrug.quantity) }}
        </div>
    </div>
</div>
<div class="row"> 
    {% if editMode %}
        <div class="col-lg-6">
            <button type="submit" class="btn btn-success btn-block">Modifier</button>
        </div>
    {% else %}
        <div class="col-lg-6">
            <button type="submit" class="btn btn-info btn-block">Ajouter</button>
        </div>
    {% endif %}
    
    <div class="col-lg-6">
	    <button type="reset" class="btn btn-default btn-block">Reseter</button>
    </div>
</div>

{{ form_end(formDrug) }}