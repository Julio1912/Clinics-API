{% extends 'admin/base.html.twig' %}

{% block title %}Hello PositionController!
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path('dashboard')}}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">listes postes</li>
					</ol>
				</div>
				<div class="col-sm-6">
					<span class="breadcrumb float-sm-right">
						<a href="{{path('position.add')}}" class="float-right btn btn-primary">Ajouter nouveaux postes</a>
					</span>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<div class="card ">
		<div class="card-header">
			<h3 class="card-title">
				<center>Listes des postes disponibles</center>
			</h3>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<table id="listPositions" class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Poste</th>
						<th>Code</th>
						<th>Statut</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% for listPosition in listPositions %}
						<tr>
							<td>
								{{listPosition.name}}</td>
							<td>{{listPosition.code}}</td>
                            <td>{{ include('admin/components/block/status.html.twig', { 'etat_status': listPosition.status}) }}</td>

							<td>
								<a href="{{path('position.edit' , {"id":listPosition.id})}}" class="btn btn-rounded btn-success" data-toggle="tooltip" data-placement="bottom">
									<i class="m-r-10 fas fa-edit"></i>
								</a>
							</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->
{% endblock %}
{% block javascripts %}
	{{ include('admin/components/block/blockjs.datatable.html.twig', { 'table_id': 'listPositions', 'targets': 3 }) }}
{% endblock %}
