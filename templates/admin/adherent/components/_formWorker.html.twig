        <img class="col-lg-12 " src="{{asset('uploads/avatarWorker/' ~ worker.avatar )}}">
    </div>
    <div class="col-lg-3 ">
        <div class="form-group">
            {{ form_row(formWorker.avatarFile) }}
        </div>
    </div>
    {% else %}
    <div class="col-lg-6 ">
